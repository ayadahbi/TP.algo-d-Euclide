import tkinter as tk 
from tkinter import messagebox 
 
# Extended Euclidean Algorithm 
def extended_euclid(a, b): 
    if b == 0: 
        return a, 1, 0 
    else: 
        d, x1, y1 = extended_euclid(b, a % b) 
        x = y1 
        y = x1 - (a // b) * y1 
        return d, x, y 
 
def start_program(): 
    answer = messagebox.askyesno("ðŸŒ¸ Welcome", "Do you want to calculate the GCD?") 
    if not answer: 
        root.destroy() 
        return 
    knowledge_check() 
 
def knowledge_check(): 
    answer = messagebox.askyesno("GCD Knowledge", "Do you know what GCD is?") 
    if not answer: 
        messagebox.showinfo("GCD Definition",  
                            "GCD (Greatest Common Divisor) of two numbers is the largest number that divides 
both without remainder.") 
    enter_numbers() 
 
def enter_numbers(): 
    # Clear previous widgets 
    for widget in root.winfo_children(): 
        widget.destroy() 
 
    def create_bubble(text): 
        bubble = tk.Label(root, text=text, font=("Arial", 14), fg="white", bg="#ffb6c1",  
                          padx=10, pady=10, relief="raised", bd=2) 
        bubble.pack(pady=5) 
        return bubble 
 
    create_bubble("Enter the first number:") 
    entry_a = tk.Entry(root, font=("Arial", 12)) 
    entry_a.pack(pady=5) 
 
    create_bubble("Enter the second number:") 
    entry_b = tk.Entry(root, font=("Arial", 12)) 
    entry_b.pack(pady=5) 
 
    result_label = tk.Label(root, text="", font=("Arial", 14, "bold"), fg="#800080") 
    result_label.pack(pady=10) 
 
    wave_canvas = tk.Canvas(root, width=300, height=20, bg="pink", highlightthickness=0) 
    wave_canvas.pack() 
    for i in range(0, 300, 20): 
        wave_canvas.create_line(i, 10, i+10, 10, fill="#ff69b4", width=3) 
 
    def calculate(): 
        try: 
            a = int(entry_a.get()) 
            b = int(entry_b.get()) 
        except ValueError: 
            messagebox.showerror("Input Error", "Please enter valid integers.") 
            return 
 
        # Euclid's algorithm for GCD 
        x, y = a, b 
        while y != 0: 
            x, y = y, x % y 
        gcd = x 
 
        # Show result with emoji 
        if gcd == 1: 
            result_label.config(text=f"The GCD of {a} and {b} is {gcd} ðŸ˜„ (Coprime!)") 
        else: 
            result_label.config(text=f"The GCD of {a} and {b} is {gcd} ðŸ˜¢ (Not coprime)") 
 
        # Ask if user wants to solve a*x + b*y = c 
        def solve_equation(): 
            def compute_solution(): 
                try: 
                    c = int(entry_c.get()) 
                except ValueError: 
                    messagebox.showerror("Input Error", "Enter a valid integer for c.") 
                    return 
                if c % gcd != 0: 
                    messagebox.showinfo("No solution", f"No integer solution: {gcd} does not divide {c}.") 
                else: 
                    factor = c // gcd 
                    d, x0, y0 = extended_euclid(a, b) 
                    xp = x0 * factor 
                    yp = y0 * factor 
                    bx = b // d 
                    ay = a // d 
                    messagebox.showinfo("Solution",  
                        f"Solution particuliÃ¨re: x0 = {xp}, y0 = {yp}\n" 
                        f"Forme gÃ©nÃ©rale: x = {xp} + ({bx})*k, y = {yp} - ({ay})*k, k âˆˆ Z") 
 
            for widget in root.winfo_children(): 
                widget.destroy() 
            create_bubble("Enter the value of c for equation a*x + b*y = c:") 
            entry_c = tk.Entry(root, font=("Arial", 12)) 
            entry_c.pack(pady=5) 
            tk.Button(root, text="Compute Solution", command=compute_solution, 
bg="#87cefa").pack(pady=10) 
 
        tk.Button(root, text="Solve a*x + b*y = c", command=solve_equation, 
bg="#87cefa").pack(pady=10) 
        tk.Button(root, text="Recalculate GCD", command=enter_numbers, 
bg="#87cefa").pack(pady=10) 
 
    tk.Button(root, text="Calculate GCD", command=calculate, bg="#87cefa").pack(pady=10) 
 
root = tk.Tk() 
root.title("ðŸŒ¸
